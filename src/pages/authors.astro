---
import { db, Author, Book } from "astro:db";
import GlobalLayout from "../layouts/GlobalLayout.astro";
const pageTitle = "Authors";

const authors = await db.select().from(Author);
---

<GlobalLayout pageTitle={pageTitle}>
    <p>This page should be a list of authors for managing records. <br />
    Not to be accessed by users or linked to.</p>
    <ul>
        {
            authors.map(({ id, name }) => (
                <li>
                    <a href={`/authors/${id}`}>{name}</a>
                </li>
            ))
        }
    </ul>
</GlobalLayout>
