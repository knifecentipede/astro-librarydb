import { db, Author } from "astro:db";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const authors = await db.select().from(Author);

    return authors.map((author) => ({
        params: { id: author.id },
        props: { author },
    }));
}

