---
import { db, eq, like, Author, Book } from "astro:db";
import GlobalLayout from "../layouts/GlobalLayout.astro";
const pageTitle = "Books";

export const prerender = false;

const search = Astro.url.searchParams.get("q");
const column = Astro.url.searchParams.get("column");

let rows = [];
if (search == null) {
    rows = await db
        .select()
        .from(Book)
        .innerJoin(Author, eq(Book.authorId, Author.id));
} else {
    switch (column) {
        // case "all":
        //     const titles = await db
        //         .select()
        //         .from(Book)
        //         .where(like(Book.title, `%${search}%`))
        //         .innerJoin(Author, eq(Book.authorId, Author.id));
        //     console.log(titles);

        //     const authors = await db
        //         .select()
        //         .from(Author)
        //         .where(like(Author.name, `%${search}%`))
        //         .innerJoin(Book, eq(Book.authorId, Author.id));
        //     console.log(authors);
        //     break;

        case "title":
            rows = await db
                .select()
                .from(Book)
                .where(like(Book.title, `%${search}%`))
                .innerJoin(Author, eq(Book.authorId, Author.id));
            break;

        case "author":
            rows = await db
                .select()
                .from(Author)
                .where(like(Author.name, `%${search}%`))
                .innerJoin(Book, eq(Book.authorId, Author.id));
            break;
    }
}
---

<GlobalLayout pageTitle={pageTitle}>
    <table>
        <thead>
            <tr>
                <th>Author</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            {
                rows.map(({ Book, Author }) => (
                    <tr>
                        <td>
                            <a href={`/authors/${Author.id}`}>{Author.name}</a>
                        </td>
                        <td>
                            <a href={`/books/${Book.id}`}>{Book.title}</a>
                            <div class="isbn">ISBN: {Book.isbn}</div>
                        </td>
                    </tr>
                ))
            }
            <tr>
                <td>test 1</td>
                <td>test 2</td>
            </tr>
        </tbody>
    </table>
</GlobalLayout>

<style>
    table {
        table-layout: fixed;
        width: 90%;
    }

    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th {
        background-color: lightgray;
        text-align: left;
    }

    th,
    td {
        padding: 4px;
        vertical-align: top;
    }

    thead th:nth-child(1) {
        width: 30%;
    }

    thead th:nth-child(2) {
    }

    .isbn {
        color: green;
        font-size: small;
    }
</style>
